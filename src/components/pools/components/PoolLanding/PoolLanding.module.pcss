.container {
	gap: 64px;
}

.section {
	flex-direction: row;
	gap: var(--sp-lg);
}

.sectionHeading {
	color: var(--color-grey-600);
	font-weight: 500;
	font-size: 0.875rem;
}

@media (max-width: 1000px) {
	.section {
		margin: 0 auto;
		width: 100%;
		flex-direction: column;
	}

	.statSection {
		gap: var(--sp-md);
	}
}

@media (max-width: 667px) {
	.statSection {
		flex-direction: column;
		gap: var(--sp-md);
	}
}
