.container {
	gap: var(--sp-lg);
}

.content {
	gap: var(--sp-lg);
}

.poolStatus {
	gap: var(--sp-xs);
	font-weight: 500;
	font-size: 0.875rem;
}

.poolStatus > p {
	font-weight: 500;
	font-size: 0.875rem;
}

.info {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: var(--sp-md);
}

.generalInfo {
	display: flex;
	flex-direction: row;
	align-items: center;
	gap: var(--sp-sm);
	min-height: 32px;
}

.title {
	font-size: 1.5rem;
	color: var(--color-grey-700);
}

.poolStats {
	gap: var(--sp-md);
}

.statsRow {
	display: flex;
	width: 100%;
	justify-content: space-between;
	border-bottom: 1px solid var(--color-grey-100);
	flex-direction: row;
	padding-bottom: var(--sp-sm);
}

.stat {
	font-weight: 500;
	font-size: 1rem;
	color: var(--color-grey-700);
}

.buttons {
	width: 100%;
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: var(--sp-sm);
}

.button {
	min-width: 177px;
}

@media (max-width: 425px) {
	.buttons {
		display: flex;
		flex-direction: column;
	}

	.button {
		width: 100%;
	}
}
