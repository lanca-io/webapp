.widget-container {
	display: flex;
	flex-direction: column;
	width: 100%;
	max-width: 394px;
	height: auto;
	margin: 0 auto;
	gap: 20px;
}
.chain-buttons {
	display: flex;
	flex-wrap: wrap;
	gap: 10px;
}

.chain-button {
	padding: 10px 20px;
	background-color: #007bff;
	color: white;
	border: none;
	border-radius: 5px;
	cursor: pointer;
	transition: background-color 0.3s;
}

.chain-button:hover {
	background-color: #0056b3;
}
