.scroll-content {
	display: flex;
	flex-direction: column;
	height: 100%;
	width: 100%;
	gap: var(--sp-lg);
	overflow-y: auto;
	position: relative;
}

.modal-blur {
	position: absolute;
	bottom: 16px;
	left: 0;
	width: 100%;
	height: 32px;
	background: linear-gradient(180deg, rgba(252, 252, 253, 0) 0%, var(--colors-neutral-gray-25, #fcfcfd) 100%);
	pointer-events: none;
	z-index: 10;
}
