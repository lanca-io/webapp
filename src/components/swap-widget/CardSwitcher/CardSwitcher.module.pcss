.switcher {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	pointer-events: none;
	max-width: 360px;
}

.switcher-separator {
	width: 200px;
	height: 1px;
	background-color: var(--color-grey-100);
}

.switcher-icon {
	background-color: var(--color-grey-100);
	padding: var(--sp-sm);
	box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
	pointer-events: auto;
}
