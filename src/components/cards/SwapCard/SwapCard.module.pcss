.container {
	width: 100%;
	background-color: var(--color-grey-700);
	box-shadow: 0px 48px 200px 0px var(--color-pacific-700);
}

@media (max-width: 768px) {
	.container {
		width: 100%;
	}
}

.swapContainer {
	gap: var(--sp-sm);
}

.avatarContainer {
	align-items: center;
	flex-direction: row;

	div:nth-child(2) {
		margin-left: -8px;
	}

	div:nth-child(3) {
		margin-left: -8px;
		margin-right: var(--sp-xs);
	}
}

p {
	font-size: 0.85rem;
}
