.route_info_source {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: var(--sp-sm);
}

.route_info_amount {
	font-size: 2rem;
	font-weight: 500;
	font-style: normal;
	line-height: 36px;
	color: var(--color-grey-700);
}

.route_info_dollar_value {
	font-size: 0.875rem;
	color: var(--color-grey-600);
	font-style: normal;
	font-weight: 500;
	line-height: 18px;
}
