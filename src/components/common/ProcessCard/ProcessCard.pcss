.process_card_not_started,
.process_card_pending,
.process_card_success,
.process_card_failed,
.process_card_rejected {
	position: relative;
	border-radius: var(--sp-xl);
	transition: box-shadow 0.3s ease;
}

.process_card_not_started {
	box-shadow: 0px 20px 150px 0px var(--color-primary-100);
}

.process_card_pending {
	box-shadow: 0px 20px 150px 0px var(--color-primary-100);
}

.process_card_success {
	box-shadow: 0px 20px 150px var(--color-success-50);
}

.process_card_failed {
	box-shadow: 0px 20px 150px var(--color-danger-100);
}

.process_card_rejected {
	box-shadow: 0px 20px 150px var(--color-danger-100);
}

.process_card {
	display: flex;
	width: 394px;
	flex-direction: column;
	align-items: center;
	border-radius: var(--sp-xl);
	padding: var(--sp-lg);
	gap: var(--sp-lg);
	background-color: var(--color-grey-25);
	border-bottom: 1px solid var(--color-grey-100);
	z-index: 2;
	position: relative;
}

.pending {
	padding: var(--sp-lg) var(--sp-lg) var(--sp-xl) var(--sp-lg);
}

.process_card_title {
	display: flex;
	flex: 1 0 0;
	font-size: 1.125rem;
	font-weight: 500;
	line-height: 22px;
	color: var(--color-grey-700);
}

@media only screen and (min-width: 641px) and (max-width: 1024px) {
	.process_card {
		width: 448px;
	}
}

@media only screen and (max-width: 640px) {
	.process_card {
		max-width: 100%;
		width: 100%;
	}
}
