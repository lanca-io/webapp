.tooltip {
	background: var(--color-grey-900);
	padding: var(--sp-sm) var(--sp-md);
	flex-direction: row;
	display: none;
	align-items: center;
	gap: var(--sp-sm);
	border-radius: var(--sp-md);
	box-shadow: 0 2px 12px 0 rgba(52, 64, 84, 0.2);

	b {
		color: var(--color-grey-100);
		font-weight: 500;
	}

	p {
		color: var(--color-grey-300);
		font-weight: 500;
	}
}

tspan {
	font-size: 0.775rem;
}
