.header {
	width: 100%;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: var(--sp-sm);
}

.title {
	font-size: 1.125rem;
	color: var(--color-grey-600);
}

.smallTitle {
	font-size: 1.125rem;
	color: var(--color-grey-500);
}

.value {
	font-size: 2.25rem;
	color: var(--color-grey-700);
	margin-bottom: var(--sp-sm);
}

.smallValue {
	font-size: 1.5rem;
	color: var(--color-grey-700);
	margin-bottom: var(--sp-sm);
}
