.destination_panel {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: var(--sp-lg);
	align-self: stretch;
}

.destination_panel_input {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: var(--sp-sm);
	align-self: stretch;
}

.destination_panel_info {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: var(--sp-md);
	align-self: stretch;
}
