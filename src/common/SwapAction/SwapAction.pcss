.swap_action_wrapper {
	position: relative;
	width: 100%;
	border-radius: var(--sp-xl);
	border-top: 1px solid var(--color-gray-100);
}

.swap_action {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: var(--sp-md);
	padding: var(--sp-lg);
	border-radius: var(--sp-xl);
	background-color: var(--color-grey-25);
	border-bottom: 1px solid var(--color-grey-100);
	align-self: stretch;
	z-index: 1;
	position: relative;
}
